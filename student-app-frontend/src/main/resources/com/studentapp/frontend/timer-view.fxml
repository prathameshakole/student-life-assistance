<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentapp.frontend.controller.TimerController" spacing="20" alignment="CENTER">
    <!-- Analog Clock Placeholder -->
    <Canvas fx:id="analogClockCanvas" width="200" height="200" />
    <!-- Digital Timer -->
    <Label fx:id="digitalTimerLabel" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="00:00:00" />
    <!-- Controls -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="startButton" text="Start" />
        <Button fx:id="pauseButton" text="Pause" />
        <Button fx:id="restartButton" text="Restart" />
        <Button fx:id="setToButton" text="Set To..." />
    </HBox>
</VBox> 