<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Event Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="eventNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextArea fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefRowCount="2"/>

    <Label text="Start Time (yyyy-MM-dd HH:mm):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="startTimeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="End Time (yyyy-MM-dd HH:mm):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="endTimeField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Meeting Links:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="meetingLinksField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Event Type:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <ComboBox fx:id="eventTypeCombo" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="6" GridPane.columnIndex="1">
        <Button fx:id="submitButton" text="Submit" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" text="Cancel" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>
</GridPane> 